@model CustomerTransactionForGetAllDto
<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><span class="fas fa-plus"></span> Satış Yap</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body">
                <form asp-controller="CustomerTransaction" id="form-customerTransaction-add" asp-action="AddOrEdit" method="post">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none;"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Unit"></label>
                        <input type="number" class="form-control" asp-for="Unit" />
                        <span class="text-danger" asp-validation-for="Unit"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UnitPrice"></label>
                        <input class="form-control" type="number" asp-for="UnitPrice" />
                        <span class="text-danger" asp-validation-for="UnitPrice"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TotalPrice"></label>
                        <input class="form-control" type="number" asp-for="TotalPrice" />
                        <span class="text-danger" asp-validation-for="TotalPrice"></span>
                    </div>
                   
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input class="form-control" type="text" asp-for="Description" />
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductId" class="text-info">ProductName</label>
                        <select asp-for="ProductId" asp-items=" ViewBag.deger1 " class="form-control">
                            <option class="form-control text-info">Ürün Seçiniz.....</option>
                        </select>
                        <span class="text-danger" asp-validation-for="ProductId"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerId" class="text-info">CustomerName</label>
                        <select asp-for="CustomerId" asp-items=" ViewBag.deger2 " class="form-control">
                            <option class="form-control text-info">Müşteri Seçiniz.....</option>
                        </select>
                        <span class="text-danger" asp-validation-for="CustomerId"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PersonelId" class="text-info">Personel Name</label>
                        <select asp-for="PersonelId" asp-items=" ViewBag.deger3 " class="form-control">
                            <option class="form-control text-info">Satış Yapan Personellerimiz .....</option>
                        </select>
                        <span class="text-danger" asp-validation-for="PersonelId"></span>
                    </div>
                    <div class="modal-footer form-group">
                        <button type="button" class="btn btn-warning btn-block" data-bs-dismiss="modal"><span class="fas fa-times"></span>Iptal Et</button>
                        <button type="submit" id="btn-add" class="btn btn-primary  btn-block"><span class="fas fa-save"></span>Satış Yap</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>